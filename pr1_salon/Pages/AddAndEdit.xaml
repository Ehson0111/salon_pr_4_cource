<Page x:Class="pr1_salon.Pages.AddAndEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr1_salon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="AddAndEdit">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Добавление/Редактирование услуги" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="18" FontWeight="Bold" Margin="10"/>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Поля ввода -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
                    <Label Name="lbl" Content="Идентификатор услуги:"/>
                    <TextBox Name="tbID" IsReadOnly="True" Visibility="Collapsed"/>

                    <Label Content="Название услуги:"/>
                    <TextBox Name="tbTitle" Margin="0,5,0,5"/>

                    <Label Content="Стоимость услуги (руб.):"/>
                    <TextBox Name="tbCost" Margin="0,5,0,5"/>

                    <Label Content="Длительность (мин):"/>
                    <TextBox Name="tbDuration" Margin="0,5,0,5"/>

                    <Label Content="Описание услуги:"/>
                    <TextBox Name="tbDescription" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80" Margin="0,5,0,5"/>

                    <Label Content="Скидка (%):"/>
                    <TextBox Name="tbDiscount" Margin="0,5,0,5"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                        <Label Content="Главное изображение:" VerticalAlignment="Center"/>
                        <Image Name="imgMain" Width="104" Height="70"/>
                        <Button Name="btnImage" Content="Выбрать изображение" Click="btnImage_Click" Margin="10,0,10,0" Height="26"/>
                    </StackPanel>
                </StackPanel>

                <!-- Дополнительные изображения -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
                    <Label Content="Дополнительные изображения:"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="150">
                        <StackPanel Name="spAdditionalImages" Orientation="Horizontal" Margin="0,5,0,5"/>
                    </ScrollViewer>

                    <Button Name="BtnAddAdditionalImage" Content="Добавить изображение" Click="BtnAddAdditionalImage_Click" Margin="0,5,0,5"/>
                    <Button Name="BtnRemoveAdditionalImage" Content="Удалить изображение" Click="BtnRemoveAdditionalImage_Click" Margin="0,5,0,5"/>
                </StackPanel>
            </Grid>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Name="BtnSave" Content="Сохранить" Width="120" Margin="5" Click="BtnSave_Click"/>
                <Button Name="BtnCancel" Content="Отмена" Width="120" Margin="5" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
